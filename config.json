{
    // The top node for lustre files
    "lustre.topnode" : "top",

    // Specifies the type to use for reals during a lustre translation
    // - real: uses infinite-precision rational arithmetic
    // - float16, float32, float64: uses floating-point with the given precision
    "lustre.type.real" : "float32",

    // Specifies the type to use for reals during a simulink translation
    // - real: uses infinite-precision rational arithmetic
    // - float: uses floating-point with appropriate precision for each block
    "simulink.type.real" : "float",

    // true to produce a simulation using
    // input values in "simulation.file", if present, or
    // using default simulation values for each type
    "simulation" : false,
    // The depth for which simulation will be run
    "simulation.depth" : 10,

    // true to verify the properties that are found in the design
    "verification" : true,
    // Timeout limit for verification
    "verification.timeout" : 2147483647,
    // The verification engine to use among
    // - bmc: a bounded model checker
    // - br: backward reachability
    // - parallel: run engines in parallel
    "verification.engine" : "bmc",
    // Verification mode
    // - all: feed all properties into the engine at once (not compatible with "parallel" engine)
    // - one: one property at a time
    "verification.mode" : "one",
    // true to produce a trace file
    "verification.trace" : true,

    // max depth for bmc
    "bmc.max_depth" : 65536,

    // Enables or disables verbosity
    "verbose" : true
}
